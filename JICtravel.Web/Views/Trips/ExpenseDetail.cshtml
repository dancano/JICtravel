@model JICtravel.Web.Data.Entities.TripEntity

    <h1>Details Expensive</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().StartDateLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().ExpensiveType.ExpensiveType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().Expensive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().PicturePathExpense)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TripDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDateLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpensiveType.ExpensiveType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Expensive)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PicturePathExpense))
                        {
                            <img src="@Url.Content(item.PicturePathExpense)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
